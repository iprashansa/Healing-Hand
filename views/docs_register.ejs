    <main>
        <section class="user-container login-section--display">
            <div class="registration">
                <div class="grid-two--column">
                    <div class="form-text">
                        <h2>Welcome!</h2>
                    <p>Login with your personal account to use the features of Healing-Hand </p>
                    <button class="login-btn">Login Here</button>
                    </div>
                    
                

                <div class="registration-form">
                    <h2 style="padding-top: 10px;"> Create Account</h2>
                    <p>Or use your email for registration</p>

                    <form action="/docHome" method="post">
                        <div class="input-field">
                            <label for="username">
                                <input type="text" name="name" id="username" placeholder="Name">
                            </label>
                        </div>
                        <div class="input-field">
                            <label for="Doctors's ID">
                                <input type="text" name="docId" id="Doctors's ID" placeholder="Doctors's ID">
                            </label>
                        </div>

                        <div class="input-field">
                            <label for="Email"><input type="email" name="email" id="Email" placeholder="Email"></label>
                        </div>
                        <div class="input-field">
                            <label for="phonenumber">
                                <input type="text" name="phoneNumber" id="phonenumber" placeholder="Phone Number">
                            </label>
                        </div>

                        <div class="input-field">
                            <label for="Password"> <input type="password" name="password" id="Password" placeholder="Password"></label>
                        </div>

                        <div class="input-field">
                            <a href="/docHome"><button class="btn">Register</button></a>
                        </div>
                    </form>

                </div>

              </div>
            </div>

            <div class="login">
                <div class="grid-two--column">
                    <div class="form-text">
                        <h2>Hello, Friend!</h2>
                    <p>Enter your pesonal details to start your journey with Healing-Hand </p>
                    <button class="registration-btn">Register Here</button>
                    </div>
                    
                

                <div class="login-form">
                    <h2> Sign In</h2>
                    <p>Or use your account</p>

                    <form action="#">

                        <div class="input-field">
                            <label for="Email1"><input type="email1" name="#" id="Email" placeholder="Email"></label>
                        </div>

                        <div class="input-field">
                            <label for="Password1"> <input type="password1" name="#" id="Password" placeholder="Password"></label>
                        </div>

                        <div class="input-field">
                            <input type="submit" value="Login">
                        </div>
                    </form>

                </div>
             </div>

            </div>
        </section>
    </main>

</header>
<script>
    const user_con = document.querySelector('.user-container');
    const regis_btn = document.querySelector('.registration-btn');
    const login_btn = document.querySelector('.login-btn');

    regis_btn.addEventListener('click', () => {
        user_con.classList.add('login-section--display')
    })
    login_btn.addEventListener('click', () => {
        user_con.classList.remove('login-section--display')
    })

</script>

