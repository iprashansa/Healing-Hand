<!-- doctorDetails.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Profile</title>
    <link rel="stylesheet" href="/doctorProfile.css">

</head>
<body>
    <div class="doctor-details">
        <h2>Doctor Profile</h2>
        <p>Name: <%= doctor.name %></p>
        <p>Speciality: <%= doctor.speciality %></p>
        <p>Contact: <%= doctor.contact %></p>
        <p>Location: <%= doctor.location %></p>
    
        <!-- Edit Options - initially hidden -->
        <div id="edit-options" style="display: none;">
            <form action="/doctor/docHome/doctorDetails/edit" method="POST">
                <!-- Input fields for editing -->
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= doctor.name %>">
                <br>
                <label for="speciality">Speciality:</label>
                <input type="text" id="speciality" name="speciality" value="<%= doctor.speciality %>">
                <br>
                <label for="contact">Contact:</label>
                <input type="text" id="contact" name="contact" value="<%= doctor.contact %>">
                <br>
                <label for="location">Location:</label>
                <input type="text" id="location" name="location" value="<%= doctor.location %>">
                <br>
                <!-- Submit button for saving changes -->
                <button type="submit">Save Changes</button>
            </form>
        </div>
    
        <!-- Edit Button - toggles visibility of edit options -->
        <button id="edit-button" onclick="toggleEditOptions()">Edit</button>
    </div>
</body>
<script>
    function toggleEditOptions() {
        var editOptions = document.getElementById("edit-options");
        var editButton = document.getElementById("edit-button");

        // Toggle visibility of edit options
        if (editOptions.style.display === "none") {
            editOptions.style.display = "block";
            editButton.textContent = "Cancel"; // Change button text to "Cancel"
        } else {
            editOptions.style.display = "none";
            editButton.textContent = "Edit"; // Change button text back to "Edit"
        }
    }
</script>
</html>
