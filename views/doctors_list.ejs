<!-- allDoctors.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Doctors</title>
</head>
<body>
    <h1>All Doctors</h1>
    <% allDoctors.forEach(doctorDetails => { %>
        <div>
            <h2><%= doctorDetails.doctor.name %></h2>
            <p>Speciality: <%= doctorDetails.speciality %></p>
            <p>Contact: <%= doctorDetails.contact %></p>
            <p>Location: <%= doctorDetails.location %></p>
            <form action="/bookAppointment" method="post">
                <input type="hidden" name="doctorDetailsId" value="<%= doctorDetails._id %>">
                <button type="submit">Book Appointment</button>
            </form>
        </div>
    <% }) %>
</body>
</html>
